@{
    ViewData["Title"] = "Home Page";
}

@model List<Dish>

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
    <a href="/">Home</a>
    <a href="/dish/new">Add a Dish</a>
</div>
<div class="leftalign">
    <h2>Check out some recent dishes</h2>
    <hr>

    @foreach (Dish d in Model)
    {
        <h3><a asp-action="ViewDish" asp-controller="Dish" asp-route-dishId="@d.DishId">@d.DishName</a></h3>
        <h3>by @d.Chef</h3>
    }
</div>
