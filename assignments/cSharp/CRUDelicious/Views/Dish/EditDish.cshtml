<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Dish</title>
</head>

<body>
    @model Dish
    <header>
        <h1>Edit @Model.DishName</h1>
        <nav>
            <a href="/dish">Home</a>
            <a href="/dish/new">Edit Dish</a>
        </nav>
    </header>
    <main>
        <form action="/dish/@Model.DishId/update" method="post">
            <section>
                <label for="DishName">Dish Name</label>
                <input type="text" name="DishName" value="@Model.DishName">
                <span asp-validation-for="DishName"></span>
            </section>
            <section>
                <label for="Chef">Chef Name</label>
                <input type="text" name="Chef" value="@Model.Chef">
                <span asp-validation-for="Chef"></span>
            </section>
            <section>
                <label for="Tastiness">Tastiness</label>
                <select name="Tastiness" id="" value="@Model.Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Tastiness"></span>
            </section>
            <section>
                <label for="Calories">Calories</label>
                <input type="number" name="Calories" value="@Model.Calories">
                <span asp-validation-for="Calories"></span>
            </section>
            <section>
                <label for="Description">Description</label>
                <input type="text" name="Description" value="@Model.Description">
                <span asp-validation-for="Description"></span>
            </section>
            <button>Edit Dish</button>
        </form>
    </main>
</body>

</html>