@{
    ViewData["Title"] = "View Dish";
}
@model Dish

<nav class="text-center">
    <a href="dashboard">Home</a>
    <a href="/dish/new">Add Dish</a>
</nav>
<form asp-action="Delete" asp-controller="Dish" asp-route-id="@Model.DishId" method="post">
    <h1>@Model.DishName by @Model.Chef</h1>
    <hr>
    <h2>Description: @Model.Description</h2>
    <h2>Calories: @Model.Calories</h2>
    <h2>Tastiness: @Model.Tastiness</h2>

</form>
<a href="/dish/@Model.DishId/delete"><button class="delete">Delete</button></a>
<a href="/dish/@Model.DishId/edit"><button class="edit">Edit</button></a>
